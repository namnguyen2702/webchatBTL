@model webchatBTL.Models.SubscriptionPlan
@{
    ViewData["Title"] = "Cần đăng ký dịch vụ";
}

<div class="alert alert-warning mt-4">
    <h4>Bạn chưa đăng ký dịch vụ @Model.PlanName.</h4>
    <p>Vui lòng đăng ký để sử dụng tính năng này.</p>
    <form asp-action="Subscribe" method="post">
        <input type="hidden" name="planId" value="@Model.PlanId" />
        <button type="submit" class="btn btn-primary">Đăng ký ngay</button>
    </form>
</div>

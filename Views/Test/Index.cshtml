<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat Interface</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>
    <div class="container-fluid h-100">
        <div class="row h-100">
            <!-- Left Sidebar -->
            <div class="col-md-1 bg-primary d-flex flex-column align-items-center py-3 text-white">
                <i class="bi bi-bar-chart-fill mb-4" style="font-size: 1.5rem;"></i>
                <i class="bi bi-chat-left-text-fill mb-4" style="font-size: 1.5rem;"></i>
                <i class="bi bi-people-fill mb-4" style="font-size: 1.5rem;"></i>
                <i class="bi bi-gear-fill mb-4" style="font-size: 1.5rem;"></i>
                <div class="mt-auto">
                    <img src="https://via.placeholder.com/50" class="rounded-circle" alt="User">
                </div>
            </div>

            <!-- Chat Sidebar -->
            <div class="col-md-3 bg-light p-3">
                <h5 class="mb-4">Chats</h5>
                <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="Search messages or users">
                    <span class="input-group-text">
                        <i class="bi bi-search"></i>
                    </span>
                </div>

                <!-- Contacts -->
                <div class="d-flex mb-4">
                    <img src="https://via.placeholder.com/40" class="rounded-circle me-2" alt="Patrick">
                    <img src="https://via.placeholder.com/40" class="rounded-circle me-2" alt="Doris">
                    <img src="https://via.placeholder.com/40" class="rounded-circle me-2" alt="Emily">
                    <img src="https://via.placeholder.com/40" class="rounded-circle" alt="Steve">
                </div>

                <!-- Recent Chats -->
                <h6 class="mb-3">Recent</h6>
                <div class="list-group">
                    <a href="#" class="list-group-item list-group-item-action">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h6 class="mb-1">Patrick Hendricks</h6>
                                <p class="mb-1">Hey! I'm available</p>
                            </div>
                            <small>5 min</small>
                        </div>
                    </a>
                    <a href="#" class="list-group-item list-group-item-action">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h6 class="mb-1">Mark Messer</h6>
                                <p class="mb-1">Images</p>
                            </div>
                            <small class="text-danger">12 min</small>
                        </div>
                    </a>
                    <a href="#" class="list-group-item list-group-item-action">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h6 class="mb-1">General</h6>
                                <p class="mb-1">This theme is awesome!</p>
                            </div>
                            <small>20 min</small>
                        </div>
                    </a>
                    <a href="#" class="list-group-item list-group-item-action active">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h6 class="mb-1">Doris Brown</h6>
                                <p class="mb-1">Nice to meet you</p>
                            </div>
                            <small>10:12 AM</small>
                        </div>
                    </a>
                </div>
            </div>

            <!-- Chat Section -->
            <div class="col-md-8 d-flex flex-column">
                <div class="chat-header p-3 bg-white border-bottom d-flex justify-content-between">
                    <h5>Doris Brown</h5>
                    <span class="badge bg-success">Online</span>
                </div>

                <div class="chat-body p-3 flex-grow-1">
                    <div class="d-flex justify-content-start mb-3">
                        <div>
                            <img src="https://via.placeholder.com/50" class="rounded-circle" alt="User" />
                        </div>
                        <div class="bg-light p-2 rounded ms-2">
                            <p class="mb-0">Good morning!</p>
                            <small class="text-muted">10:00 AM</small>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end mb-3">
                        <div class="bg-primary text-white p-2 rounded">
                            <p class="mb-0">Yeah everything is fine</p>
                            <small class="text-muted">10:05 AM</small>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end mb-3">
                        <div class="bg-primary text-white p-2 rounded">
                            <p class="mb-0">Next meeting tomorrow 10:00 AM</p>
                            <small class="text-muted">10:05 AM</small>
                        </div>
                    </div>
                </div>

                <div class="chat-footer p-3 bg-white border-top d-flex">
                    <input type="text" class="form-control me-2" placeholder="Enter message">
                    <button class="btn btn-primary">Send</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
